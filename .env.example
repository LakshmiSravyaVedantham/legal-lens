# ─── LegalLens Environment Configuration ───

# MongoDB
MONGO_URI=mongodb://legallens:legallens@mongodb:27017/legallens?authSource=admin
MONGO_DB_NAME=legallens
MONGO_INITDB_ROOT_USERNAME=legallens
MONGO_INITDB_ROOT_PASSWORD=legallens

# ChromaDB
CHROMA_HOST=chromadb
CHROMA_PORT=8100

# Ollama (optional – used when running with `--profile ollama`)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=120

# JWT Authentication
JWT_SECRET_KEY=change-me-to-a-random-secret-at-least-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption (for API keys stored in DB). Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=change-me-generate-with-fernet

# LLM Providers (optional – configure via UI or here)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=

# Embedding Model
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# Upload Limits
MAX_FILE_SIZE_MB=50

# Backend
BACKEND_PORT=8000
BACKEND_WORKERS=1

# Frontend (nginx)
FRONTEND_PORT=80
